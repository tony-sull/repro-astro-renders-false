---
import Child from '../components/Child.astro';

const items = [1, 2, 3];
const emptyItems = [];
---

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Astro</title>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>
<body>
    <main>
        <h1>Welcome to <a href="https://astro.build/">Astro</a></h1>

        <hr />
        <h2>From Homepage</h2>

        <!-- Should render 3 items -->
        {items.length > 0 && (
            <>
                <ul>
                    {items.map(item => (
                        <li>{item}</li>
                    ))}
                </ul>
            </>
        )}

        <!-- Shouldn't render anything -->
        {emptyItems.length > 0 && (
            <>
                <ul>
                    {emptyItems.map(item => (
                        <li>{item}</li>
                    ))}
                </ul>
            </>
        )}

        <hr />

        <h2>From Child.astro</h2>

        <Child items={items} emptyItems={emptyItems} />

    </main>
</body>
</html>
